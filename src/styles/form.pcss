.form {
  margin: auto;
  padding: 25px;
  min-width: 500px;
  font-size: 15px;

  @media (--mobile) {
    padding: 15px;
    min-width: auto;
  }

  &__title {
    margin-bottom: 12px;
    padding-left: 10px;
    letter-spacing: 0.19px;
    font-size: 16px;

    @media (--mobile) {
      padding-left: 0px;
    }

    & a {
      border-bottom: 1px solid #000;
      color: inherit;
      text-decoration: none;
    }
  }

  &__textarea {
    box-sizing: border-box;
    padding: 10px;
    min-height: 250px;
    width: 100%;
    outline: none;
    border: 1px solid #E4E4E4;
    border-radius: 3px;
    background: #FFFFFF;
    box-shadow: inset 0 1px 2px 0 rgba(0,0,0,0.07);
    font-size: 14.2px;
    line-height: 1.5em;
    resize: none;

    &:focus {
      border-color: #5897EE;
    }
  }

  &-confirmation {
    display: flex;
    padding: 10px;

    &__checkbox {
      display: flex;
      margin: auto auto auto 0;

      & label {
        margin: auto;
        color: #7F7F7F;
        letter-spacing: 0.18px;
        font-size: 15px;
        cursor: pointer;
      }
    }

    &__button {
      display: flex;
      padding: 9px 15px;
      outline: none;
      border: 1px solid #E4E4E4;
      border-radius: 100px;
      background: transparent;
      transition: all 250ms ease-out;

      &:hover {
        cursor: pointer;
      }

      & svg {
        margin: auto 1px auto 0;
        transition: transform 150ms ease;
        transform: translateX(-1px);
      }

      &--active svg{
        transform: translateX(2px) rotate(-25deg) translateY(-2px);
      }

      & span {
        margin: auto auto auto 8px;
        color: #7F7F7F;
        letter-spacing: 0.07px;
        font-size: 1.2em;
      }

      &--active {
        border-color: transparent;
        background: #5897EE;
        box-shadow: 0 8px 4px -7px rgba(34,127,255,0.63);

        & span {
          color: #fff;
        }

        & svg {
          fill: #fff;
        }
      }
    }
  }
}

.custom-checkbox {
  position: relative;
  display: inline-block;
  margin-right: 9px;
  width: 22px;
  height: 22px;
  border: 1px solid #E4E4E4;
  border-radius: 3px;
  background: #FFFFFF;
  vertical-align: text-bottom;
  cursor: pointer;
  transition: all 300ms ease;

  &::before {
    position: absolute;
    z-index: 2;
    width: 100%;
    height: 100%;
    background: url('checkbox.svg') 50% no-repeat;
    content: '';
    opacity: 0;
    transition: all 200ms ease;
    transform: rotate(-45deg);
  }

  &::after {
    position: absolute;
    top: 50%;
    left: 50%;
    display: block;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: #5897EE;
    content: '';
    transition: all 100ms ease-out;
    transform: translate(-50%, -50%);
    will-change: width, height;
  }

  & input {
    display: none;
  }

  &--active {
    border-color: transparent;
    border-radius: 50%;

    &::before {
      opacity: 1;
      transform: rotate(0deg);
    }

    &::after {
      width: 100% !important;
      height: 100% !important;
      border-radius: 50%;
      background: #5897EE;
    }
  }
}

.form-confirmation__checkbox:hover .custom-checkbox::after {
  width: 10px;
  height: 10px;
}
